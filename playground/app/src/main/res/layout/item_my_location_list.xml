<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.playground.notification.ds.sync.MyLocation" />


        <variable
            name="myLoc"
            type="MyLocation" />
    </data>

    <android.support.v7.widget.CardView
        style="@style/BoxCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.playground.notification.views.MaterialRippleLayout
            style="@style/MaterialRippleLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_transparent"
            android:longClickable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop" />


                <CheckBox
                    android:id="@+id/item_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:theme="@style/ActionModeCheckbox" />


                <TextView
                    android:id="@+id/label_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textColor="@color/common_white"
                    android:layout_gravity="bottom" android:text="@{myLoc.label}"
                    android:background="@color/common_black"
                    android:gravity="center_horizontal" />
            </FrameLayout>
        </com.playground.notification.views.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</layout>