<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ItemPlaygroundBinding">

        <variable
            name="playground"
            type="com.playground.notification.ds.grounds.Playground"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.playground.notification.views.MaterialRippleLayout
                style="@style/MaterialRippleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/location_preview_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:playground ="@{playground}"/>
            </com.playground.notification.views.MaterialRippleLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>